{{ 'component-manual-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-manual-slider.js' | asset_url | script_tag }}

<div class="manual-slider" id="slider-{{ section.id }}">
  <div class="slider-track">
    {% for block in section.blocks %}
      <div class="slide" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            width="600"
            height="600"
            alt="slide"
            loading="lazy"
          >
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="slide-text">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <button class="slider-btn prev">‹</button>
  <button class="slider-btn next">›</button>
</div>

{% schema %}
{
  "name": "Slider manual",
  "max_blocks": 10,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Activar autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Velocidad autoplay (ms)",
      "min": 2000,
      "max": 8000,
      "step": 500,
      "default": 4000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider manual",
      "blocks": [{ "type": "slide" }, { "type": "slide" }]
    }
  ]
}
{% endschema %}
