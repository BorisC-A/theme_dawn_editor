<div>
  {{ section.settings.imagen | json }}
  {% if section.settings.imagen %}
    <img
      src="{{ section.settings.ultima_imagen | image_url: width: 1200 }}"
      alt="{{ section.settings.ultima_imagen.alt }}"
      style="width: 100%;"
    >
  {% else %}
    <p>No hay imagen seleccionada</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "ultima_imagen",
  "settings": [
    {
      "type": "image_picker",
      "id": "ultima_imagen",
      "label": "ultima imagen"
    }
  ]
}
{% endschema %}
