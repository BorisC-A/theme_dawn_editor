{% comment %} sections/image-text.liquid {% endcomment %}

<section class="image-text-section" style="padding: 60px 20px;">
  <div class="image-text-container {% if section.settings.reverse_layout %}image-text--reverse{% endif %}">
    <!-- Imagen -->
    <div class="image-text__image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image_alt }}"
          style="width:100%; border-radius: 8px;"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <!-- Texto -->
    <div class="image-text__content">
      {% if section.settings.subtitle != blank %}
        <p class="image-text__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="image-text__title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="image-text__text">{{ section.settings.text }}</div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="image-text__btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .image-text-container {
    display: flex;
    align-items: center;
    gap: 60px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .image-text--reverse {
    flex-direction: row-reverse;
  }

  .image-text__image,
  .image-text__content {
    flex: 1;
  }

  .image-text__subtitle {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 13px;
    color: #888;
    margin-bottom: 10px;
  }

  .image-text__title {
    font-size: 2rem;
    margin-bottom: 16px;
  }

  .image-text__text {
    font-size: 1rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 24px;
  }

  .image-text__btn {
    display: inline-block;
    padding: 12px 28px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .image-text-container,
    .image-text--reverse {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Imagen y Texto",
  "settings": [
    {
      "type": "checkbox",
      "id": "reverse_layout",
      "label": "Invertir layout (texto a la izquierda)",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Texto alternativo de la imagen"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Subtítulo aquí"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Tu título principal"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Texto",
      "default": "<p>Escribe aquí tu descripción o contenido principal.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link del botón"
    }
  ],
  "presets": [
    {
      "name": "Imagen y Texto"
    }
  ]
}
{% endschema %}
